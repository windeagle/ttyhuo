<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout style="@style/big_item">
        <ImageView android:id="@+id/big_item_icon" style="@style/big_item_icon" />
        <TextView android:id="@+id/big_item_text" style="@style/big_item_text" />
        <ImageView android:src="@drawable/btn_icon_arrow" style="@style/big_item_arrow_icon" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ly_harfline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <FrameLayout
                android:layout_width="74dp"
                android:layout_height="1px"
                android:background="#FFFFFF"/>
        <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1px"
                android:background="#CACBCC"/>
    </LinearLayout>
</LinearLayout>

                    