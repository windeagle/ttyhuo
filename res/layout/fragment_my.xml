<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ttyhuo="http://schemas.android.com/apk/res/cn.ttyhuo"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:scrollbars="none"
                android:background="@color/main_bg"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_myself" ttyhuo:bigItemIcon="@drawable/item_icon_info" ttyhuo:bigItemText="我的资料" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_editBasic" ttyhuo:bigItemIcon="@drawable/item_icon_edit" ttyhuo:bigItemText="修改资料" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_dongTai" ttyhuo:bigItemIcon="@drawable/item_icon_dongtai" ttyhuo:bigItemText="个人动态" ttyhuo:showHarfLine="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />

            <!--<include layout="@layout/part_line"/>-->

            <LinearLayout   android:visibility="gone"
                    android:id="@+id/ly_route" style="@style/narrow_field_area">

                <TextView
                        style="@style/textsize_16_9F9F9F"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/route_lineHeight"
                        android:gravity="center"
                        android:text="常跑路线" />

                <ListView
                        android:id="@+id/lv_routes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:dividerHeight="0px"
                        android:scrollbars="none" />

            </LinearLayout>

            <!--<include layout="@layout/part_line"/>-->

            <cn.ttyhuo.view.BigItemLayout android:visibility="gone"  android:id="@+id/ly_shoucang" ttyhuo:bigItemIcon="@drawable/item_icon_love" ttyhuo:bigItemText="收藏货源" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone"  android:id="@+id/ly_guanzhu" ttyhuo:bigItemIcon="@drawable/item_icon_view" ttyhuo:bigItemText="关注的人" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone"  android:id="@+id/ly_fensi" ttyhuo:bigItemIcon="@drawable/item_icon_fans" ttyhuo:bigItemText="我的粉丝" ttyhuo:showHarfLine="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />

            <include layout="@layout/part_line" android:visibility="gone"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/iv_huoyuan"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/big_img_cube" />

                    <FrameLayout
                            android:layout_height="5dp"
                            android:layout_width="1px">
                    </FrameLayout>

                    <ImageView
                            android:id="@+id/iv_invite"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/big_img_invite" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:orientation="vertical">

                    <ImageView
                            android:visibility="gone"
                            android:id="@+id/iv_fabu"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/big_img_new" />

                    <FrameLayout
                            android:visibility="gone"
                            android:layout_height="5dp"
                            android:layout_width="1px">
                    </FrameLayout>

                    <ImageView
                            android:id="@+id/iv_quick_fabu"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/big_img_new" />

                    <FrameLayout
                            android:layout_height="5dp"
                            android:layout_width="1px">
                    </FrameLayout>

                    <ImageView
                            android:id="@+id/iv_yonghu"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/big_img_truck" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_guanggao"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/img_guanggao" />

            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_huoyuan" ttyhuo:bigItemIcon="@drawable/item_icon_cube" ttyhuo:bigItemText="我要找货" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_yonghu" ttyhuo:bigItemIcon="@drawable/item_icon_fans" ttyhuo:bigItemText="我要找车" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_fabu" ttyhuo:bigItemIcon="@drawable/item_icon_new" ttyhuo:bigItemText="发布货源" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_toubiao" ttyhuo:bigItemIcon="@drawable/item_icon_flag" ttyhuo:bigItemText="我接的货" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_zhaobiao" ttyhuo:bigItemIcon="@drawable/item_icon_dflag" ttyhuo:bigItemText="我召的车" ttyhuo:showHarfLine="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />

            <!--<include layout="@layout/part_line"/>-->

            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_link" ttyhuo:bigItemIcon="@drawable/item_icon_link" ttyhuo:bigItemText="邀请朋友" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_real_verify" ttyhuo:bigItemIcon="@drawable/item_icon_real_verify" ttyhuo:bigItemText="实名认证" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_truck" ttyhuo:bigItemIcon="@drawable/item_icon_truck" ttyhuo:bigItemText="车辆信息" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_company" ttyhuo:bigItemIcon="@drawable/item_icon_company" ttyhuo:bigItemText="公司信息" ttyhuo:showHarfLine="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />

            <!--<include layout="@layout/part_line"/>-->

            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_change_password" ttyhuo:bigItemIcon="@drawable/item_icon_change_password" ttyhuo:bigItemText="修改密码" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_help" ttyhuo:bigItemIcon="@drawable/item_icon_help" ttyhuo:bigItemText="帮助" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />
            <cn.ttyhuo.view.BigItemLayout android:visibility="gone" android:id="@+id/ly_exit" ttyhuo:bigItemIcon="@drawable/item_icon_exit" ttyhuo:bigItemText="退出" ttyhuo:showHarfLine="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" />

            <!--<include layout="@layout/part_line"/>-->

            <Button android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:id="@+id/viewMyselfBtn"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/field_horizontal_padding"
                    android:layout_marginRight="@dimen/field_horizontal_padding"
                    android:layout_marginBottom="@dimen/button_bottom_margin"
                    android:text="查看资料"
                    android:background="@color/button_bg"
                    android:textSize="@dimen/font_middle"
                    android:textColor="@color/my_write"
                    android:visibility="gone"></Button>

            <Button android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:id="@+id/changePasswordBtn"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/field_horizontal_padding"
                    android:layout_marginRight="@dimen/field_horizontal_padding"
                    android:layout_marginBottom="@dimen/button_bottom_margin"
                    android:text="修改密码"
                    android:background="@color/button_bg"
                    android:textSize="@dimen/font_middle"
                    android:textColor="@color/my_write"
                    android:visibility="gone"></Button>

            <Button android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:id="@+id/logoutBtn"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/field_horizontal_padding"
                    android:layout_marginRight="@dimen/field_horizontal_padding"
                    android:layout_marginBottom="@dimen/button_bottom_margin"
                    android:text="退出登录"
                    android:background="@color/button_bg"
                    android:textSize="@dimen/font_middle"
                    android:textColor="@color/my_write"
                    android:visibility="gone"></Button>

            <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>
    <FrameLayout android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/main_bg">
    </FrameLayout>
    <include layout="@layout/part_common_footer"/>
</LinearLayout>