<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/route_lineHeight"
              android:gravity="center_vertical"
              android:orientation="horizontal"
        android:paddingLeft="@dimen/field_horizontal_padding"
        android:paddingRight="@dimen/field_horizontal_padding">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal" >
        <TextView
                android:id="@+id/fromCity"
                style="@style/textsize_16_434343"
                android:layout_marginRight="@dimen/route_item_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_qi"
                android:gravity="center_vertical"
                android:text="辽宁省 沈阳"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#CACBCC" />

    <TextView
            android:id="@+id/toCity"
            style="@style/textsize_16_434343"
            android:layout_marginLeft="@dimen/route_item_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_position"
            android:gravity="center_vertical"
            android:text="辽宁省" />
</LinearLayout>