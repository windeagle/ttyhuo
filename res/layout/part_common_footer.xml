<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ly_myproduct_footer"
              android:layout_width="match_parent"
              android:layout_height="@dimen/activity_footer_height"
              android:background="#323232"
              android:gravity="center"
              android:orientation="horizontal" >
    <LinearLayout android:id="@+id/ly_footer_home_btn"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/activity_footer_bg"
            android:gravity="center"
            android:orientation="horizontal" >
        <TextView android:id="@+id/tv_footer_home_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/tab_icon_home_press"
                  android:gravity="center_vertical"
                  android:text="首页"
                  android:textColor="#8C8C8C"
                  style="@style/textsize_16_434343" />
    </LinearLayout>
    <FrameLayout android:layout_width="1px"
                 android:layout_height="match_parent" android:background="@color/white"></FrameLayout>
    <LinearLayout android:id="@+id/ly_footer_cube_btn"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
        <TextView android:id="@+id/tv_footer_cube_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/tab_icon_cube"
                  android:gravity="center_vertical"
                  android:text="接货单"
                  android:textColor="#8C8C8C"
                  style="@style/textsize_16_434343" />
    </LinearLayout>
    <FrameLayout android:layout_width="1px"
                 android:layout_height="match_parent" android:background="@color/white"></FrameLayout>
    <LinearLayout android:id="@+id/ly_footer_truck_btn"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
        <TextView android:id="@+id/tv_footer_truck_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/tab_icon_truck"
                  android:gravity="center_vertical"
                  android:text="召车单"
                  android:textColor="#8C8C8C"
                  style="@style/textsize_16_434343" />
    </LinearLayout>
    <FrameLayout android:layout_width="1px"
                 android:layout_height="match_parent" android:background="@color/white"></FrameLayout>
    <LinearLayout android:id="@+id/ly_footer_my_btn"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
        <TextView android:id="@+id/tv_footer_my_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/tab_icon_user"
                  android:gravity="center_vertical"
                  android:text=" 我 "
                  android:textColor="#8C8C8C"
                  style="@style/textsize_16_white" />
    </LinearLayout>
</LinearLayout>